<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_serie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kamelot.projectcomics.SerieActivityFragment"
    tools:showIn="@layout/activity_serie">


        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivSerieDetail"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSerieName"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/ivSerieDetail"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="TextView"
            android:layout_width="242dp"
            android:id="@+id/tvDescription"
            android:maxLines="6"
            android:scrollbars = "vertical"
            android:gravity="center"
            android:layout_height="91dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivSerieDetail"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSerieName"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvEpisodesCount" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEpisodesCount"
            app:layout_constraintLeft_toLeftOf="@+id/ivSerieDetail"
            app:layout_constraintRight_toRightOf="@+id/ivSerieDetail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivSerieDetail" />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#0000FF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/view" />

        <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/lvEpisodes"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginTop="8dp" />



</android.support.constraint.ConstraintLayout>
    </layout>
