<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_item_lv"
    >


        <ImageView
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivEpisodePoster"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_width="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameEpisode"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivEpisodePoster"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivEpisodePoster"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEpisodeNumber"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNameEpisode"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ivEpisodePoster"
            android:layout_marginLeft="8dp"
            android:background="#ffffff"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_no_vista"
            android:id="@+id/iv_visto"
            app:layout_constraintBottom_toBottomOf="@+id/ivEpisodePoster"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivEpisodePoster"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp" />


</android.support.constraint.ConstraintLayout>
</layout>